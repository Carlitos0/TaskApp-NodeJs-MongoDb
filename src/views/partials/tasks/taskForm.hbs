<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>Add a Task</h3>
  <form action="/task/add" method="POST" class="text-white">
    <div class="mb-3">
      <label for="title">Write your title</label>
      <input
        type="text"
        name="title"
        placeholder="Write your title"
        id="title"
        class="form-control rounded-0 bg-dark text-white"
      />
    </div>
    <div>
      <label for="description">description</label>
      <textarea
        name="description"
        placeholder="Write your description"
        id="description"
        class="form-control rounded-0 bg-dark text-white"
      ></textarea>
    </div>
    <button class="btn btn-success btn-sm mt-2">Add</button>

  </form>
</div>